{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "/snippets/*": [
        "./snippets/*"
      ]
    },
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "allowJs": true,
    "noEmit": true
  },
  "mdx": {
    "checkMdx": true
  },
  "include": [
    "**/*.jsx",
    "**/*.mdx",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".tsdocs"
  ]
}
